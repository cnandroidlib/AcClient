<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cardViewColor">@color/cardViewColor</item>
    </style>


    <style name="AppThemeNight" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cardViewColor">@color/cardViewColor</item>
        <item name="preferenceFragmentListStyle">@style/list</item>
    </style>


    <attr name="preferenceFragmentListStyle" format="reference"></attr>

    <style name="list">
        <item name="android:background">#ffaaee</item>
    </style>


    <attr name="codeEditTextColor" format="color"></attr>
    <attr name="codeEditBackground" format="color"></attr>

    <style name="AppThemeNightNoactionBar" parent="AppThemeNoActionBar">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorAccent</item>
       <item name="preferenceFragmentListStyle">@style/list</item>
    </style>

    <color name="codeEditBack">#fdf6e3</color>
    <color name="codeEditText">#657b83</color>





    <style name="cardStyle">
        <item name="cardCornerRadius">5dp</item>
        <item name="contentPadding">5dp</item>
        <item name="cardBackgroundColor">#ffffff</item>
        <item name="cardElevation">5dp</item>
    </style>


    <style name="AppThemeNoActionBar" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="cardViewColor">@color/cardViewColor</item>
        <item name="codeEditTextColor"> @color/codeEditText</item>
        <item name="codeEditBackground">@color/codeEditBack</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

